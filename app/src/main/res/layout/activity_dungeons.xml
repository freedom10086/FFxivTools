<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    tools:context="com.xdluoyang.ffxivtools.pages.DungeonsActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:checkedButton="@+id/btn1"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/dunge_item_bg_1"
            android:button="@null"
            android:contentDescription="迷宫挑战(新生)"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/dunge_item_bg_2"
            android:button="@null"
            android:contentDescription="迷宫挑战(苍穹)"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn3"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/dunge_item_bg_3"
            android:button="@null"
            android:contentDescription="迷宫挑战(红莲)"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn4"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/dunge_item_bg_4"
            android:button="@null"
            android:contentDescription="讨伐歼灭(新生)"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn5"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/dunge_item_bg_5"
            android:button="@null"
            android:contentDescription="讨伐歼灭(苍穹)"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn6"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/dunge_item_bg_6"
            android:button="@null"
            android:contentDescription="讨伐歼灭(红莲)"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn7"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/dunge_item_bg_7"
            android:button="@null"
            android:contentDescription="大型任务(新生)"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn8"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/dunge_item_bg_8"
            android:button="@null"
            android:contentDescription="大型任务(苍穹)"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn9"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/dunge_item_bg_9"
            android:button="@null"
            android:contentDescription="大型任务(红莲)"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn10"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/dunge_item_bg_10"
            android:button="@null"
            android:contentDescription="其他"
            android:gravity="center" />
    </RadioGroup>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="迷宫挑战(新生)"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

</android.support.constraint.ConstraintLayout>
